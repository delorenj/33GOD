# direnv configuration for node-red-flow-orchestrator
# Activate mise environment
eval "$(mise activate bash)"

# Export environment variables for local development
export NODE_RED_DIR="$HOME/.node-red"
export FLOWS_DIR="$PWD/flows"
export SCRIPTS_DIR="$PWD/scripts"

# Source local .env if present
[[ -f .env ]] && source_env .env
