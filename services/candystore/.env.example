# ============================================================================
# Event Store Manager - The Historian Configuration
# ============================================================================

# PostgreSQL Configuration
# Connection string for event store database
DATABASE_URL=postgresql://event_store:your_password@localhost:5432/event_store

# Database connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# RabbitMQ Configuration (Bloodbank)
# Connection string for Bloodbank event bus
RABBITMQ_URL=amqp://bloodbank:your_password@localhost:5672

# Bloodbank exchange configuration
BLOODBANK_EXCHANGE=bloodbank.events.v1
BLOODBANK_EXCHANGE_TYPE=topic

# Service Configuration
# Queue name for this service
EVENT_STORE_MANAGER_QUEUE=event_store_manager_queue

# Dead letter queue for failed messages
EVENT_STORE_MANAGER_DLQ=event_store_manager_dlq

# API server settings
EVENT_STORE_MANAGER_HOST=0.0.0.0
EVENT_STORE_MANAGER_PORT=8080

# API Configuration
# API route prefix
API_PREFIX=/api/v1

# CORS allowed origins (comma-separated)
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3360

# Pagination defaults
API_DEFAULT_PAGE_SIZE=100
API_MAX_PAGE_SIZE=1000

# Maximum depth for causation chain queries
API_MAX_CAUSATION_DEPTH=100

# WebSocket Configuration
# Heartbeat interval in seconds
WS_HEARTBEAT_INTERVAL_SECONDS=30

# Maximum concurrent WebSocket connections
WS_MAX_CONNECTIONS=100

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or console
LOG_FORMAT=json

# Environment Configuration
# Environment name: development, staging, production
ENVIRONMENT=development

# Enable debug logging (true/false)
ENABLE_DEBUG_LOGGING=false

# Enable profiling (true/false)
ENABLE_PROFILING=false

# Enable metrics collection (true/false)
ENABLE_METRICS=true
