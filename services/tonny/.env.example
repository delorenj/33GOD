# RabbitMQ Configuration (Bloodbank)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
BLOODBANK_EXCHANGE=bloodbank.events.v1
TONNY_QUEUE=services.tonny.agent
TONNY_DLQ=services.tonny.agent.dlq

# Letta Configuration
LETTA_BASE_URL=http://localhost:8283
LETTA_API_KEY=your_letta_api_key_here

# LLM Provider Configuration
# Primary LLM for Letta agent
LLM_PROVIDER=openai  # openai, anthropic
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Model Configuration
LLM_MODEL=gpt-4.1  # or claude-sonnet-4.5
EMBEDDING_MODEL=text-embedding-3-small

# ElevenLabs TTS Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default voice (Rachel)
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
LOG_LEVEL=INFO

# Performance Targets
MAX_PROCESSING_LATENCY_MS=2000  # Target <2s from transcription to TTS
CONSUMER_PREFETCH_COUNT=5
